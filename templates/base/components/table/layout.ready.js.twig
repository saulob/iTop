{% apply spaceless %}

    {% set datatableJSImplementation = oUIBlock.CreateDatatableJSImplementation() %}

    var oTable{{ sListIDForVarSuffix }} = $('#{{ oUIBlock.GetId() }}').DataTable({
        columns: {{ datatableJSImplementation.GetColumns()|json_encode|raw }},
        data: {{ datatableJSImplementation.GetData()|json_encode|raw }},
        autoWidth: false,
        drawCallback: function( settings ) {
            eval('{{ datatableJSImplementation.GetAllJS()|e('js') }}');
        }
    });

{% endapply %}